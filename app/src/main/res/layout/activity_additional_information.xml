<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".additional_information">

    <TextView
        android:id="@+id/PrecautionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/PrecautionText"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="74dp" />

    <TextView
        android:id="@+id/PrecautionContent"
        android:layout_width="297dp"
        android:layout_height="355dp"
        android:layout_marginTop="28dp"
        android:text="@string/PrecautionContent"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/PrecautionTitle"
        tools:layout_editor_absoluteX="57dp" />

</androidx.constraintlayout.widget.ConstraintLayout>